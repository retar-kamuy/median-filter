{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++17",
        "${file}", "medianFilter.cpp", "bitonicSort.cpp",
        "-Iinclude",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "`pkg-config", "--cflags", "opencv`",
        "`pkg-config", "--libs", "opencv`"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "detail": "Task generated by Debugger."
    },
    {
      "label": "Bazel Build (Debug)",
      "type": "shell",
      "command": "bazel build --compilation_mode=dbg :medianFilter",
      "problemMatcher": ["$gcc"],
      "group": {
          "kind": "build",
          "isDefault": true
      },
    }
  ]
}
